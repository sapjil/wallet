{
  "name": "wallet",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "format": "prettier --cache --write ./src/",
    "format:full": "prettier --list-different --ignore-path ./.prettierignore --cache --write ./src/",
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "lint": "eslint --cache ./src/ --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint",
      "prettier --list-different --ignore-path ./.prettierignore --cache --write ./src/"
    ],
    "*.{md,json}": [
      "prettier --write ."
    ]
  },
  "dependencies": {
    "axios": "^1.6.2",
    "node-sass": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@markuplint/jsx-parser": "^3.12.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markuplint": "^3.15.0",
    "pinst": "^3.0.0",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "standard-version": "^9.5.0",
    "vite": "^5.0.8"
  }
}

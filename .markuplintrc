{
  "specs": {
    "\\.[jt]sx?$": "@markuplint/react-spec"
  },
  "parser": {
    "\\.[jt]sx?$": "@markuplint/jsx-parser"
  },
  "extends": [
    "markuplint:recommended"
  ],
  "excludeFiles": [
    "./node_modules/**/*"
  ],
  "nodeRules": [
    {
      "selector": "img",
      "rules": {
        "required-attr" : [
          "src",
          "alt"
        ]
      }
    }
  ]
}
